<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/zinciri_kirma_recycler_view_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Her gun bir saat calismak"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/zinciri_kirma_recycler_view_image_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/zinciri_kirma_recycler_view_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/zinciri_kirma_recycler_view_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zinciri_kirma_recycler_view_text_view" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#707070"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@+id/zinciri_kirma_recycler_view_image_view"
        app:layout_constraintStart_toStartOf="@+id/zinciri_kirma_recycler_view_text_view"
        app:layout_constraintTop_toBottomOf="@+id/zinciri_kirma_recycler_view_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>