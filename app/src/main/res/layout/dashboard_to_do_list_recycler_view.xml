<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/dashboard_to_do_list_list_icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/list_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dashboard_to_do_list_text_view"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:text="Your list"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/dashboard_to_do_list_list_icon"
        app:layout_constraintEnd_toStartOf="@+id/dashboard_to_do_list_forward"
        app:layout_constraintStart_toEndOf="@+id/dashboard_to_do_list_list_icon"
        app:layout_constraintTop_toTopOf="@+id/dashboard_to_do_list_list_icon" />

    <ImageView
        android:id="@+id/dashboard_to_do_list_forward"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/dashboard_to_do_list_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dashboard_to_do_list_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>