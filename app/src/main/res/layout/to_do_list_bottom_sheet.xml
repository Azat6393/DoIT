<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/to_do_list_bottom_sheet">

    <EditText
        android:id="@+id/to_do_list_bottom_sheet_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:background="@null"
        android:hint="@string/add_a_task"
        android:textColor="#A9A9A9"
        android:textSize="20sp"
        android:theme="@style/TextInputLayoutAppearance"
        app:layout_constraintBottom_toBottomOf="@+id/to_do_list_bottom_sheet_button"
        app:layout_constraintEnd_toStartOf="@+id/to_do_list_bottom_sheet_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/to_do_list_bottom_sheet_button" />

    <Button
        android:id="@+id/to_do_list_bottom_sheet_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/add"
        android:textColor="@drawable/done_button_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>