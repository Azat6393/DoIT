<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoIT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#56E39F</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">#56E39F</item>
    </style>

    <style name="TimePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#56E39F</item>
        <item name="android:timePickerStyle">@style/TimePickerDialogStyle</item>
    </style>

    <style name="TimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="colorAccent">#56E39F</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">#56E39F</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">#707070</item>
        <item name="android:textColorHint">#A9A9A9</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#707070</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#fff</item>
    </style>

    <style name="Theme.DoIT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DoIT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DoIT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#56E39F</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">#56E39F</item>
        <item name="android:layout_marginEnd">5dp</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">#FFFFFF</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">#56E39F</item>
        <item name="android:layout_marginEnd">10dp</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">#FFFFFF</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerRadius">100dp</item>

    </style>

</resources>